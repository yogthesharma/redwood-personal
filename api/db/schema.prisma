datasource db {
  provider = "cockroachdb"
  url      = env("DATABASE_URL")
}

generator client {
  provider      = "prisma-client-js"
  binaryTargets = "native"
}

model Post {
  id        String   @id @default(uuid())
  title     String
  subtitle  String
  body      String
  image     String
  createdAt DateTime @default(now())
}

model AboutDetail {
  id       String @id @default(uuid())
  title    String
  subtitle String

}

model HomeDetail {
  id       String @id @default(uuid())
  title    String
  subtitle String
}

model Contact {
  id        String   @id @default(uuid())
  name      String
  email     String
  message   String
  createdAt DateTime @default(now())
}

model User {
  id                  String    @id @default(uuid())
  name                String?
  email               String    @unique
  hashedPassword      String
  salt                String
  resetToken          String?
  resetTokenExpiresAt DateTime?
}
